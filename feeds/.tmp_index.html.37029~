		//$('#storyHolder').jqGrid('setRowData', id, old);		
	});	
}	
eipi.update = function(){
	$.post('update', function(data){
		//$("#storyHolder").jqGrid().trigger("reloadGrid");
		location.reload(); 
	});
}
